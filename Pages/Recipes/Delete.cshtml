@page
@model RecipeTracker.Pages.Recipes.DeleteModel
@{
    ViewData["Title"] = "Delete Recipe";
}

<div class="container mt-4">
    <h1>Delete Recipe</h1>
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this recipe?</h4>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h3>@Model.Recipe.Name</h3>
            <p>@Model.Recipe.Description</p>
            
            <dl class="row">
                <dt class="col-sm-3">Prep Time:</dt>
                <dd class="col-sm-9">@Model.Recipe.PrepTimeMinutes minutes</dd>
                
                <dt class="col-sm-3">Cook Time:</dt>
                <dd class="col-sm-9">@Model.Recipe.CookTimeMinutes minutes</dd>
                
                <dt class="col-sm-3">Servings:</dt>
                <dd class="col-sm-9">@Model.Recipe.Servings</dd>
            </dl>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Recipe.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
