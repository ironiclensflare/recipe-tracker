@page
@model RecipeTracker.Pages.Recipes.DetailsModel
@{
    ViewData["Title"] = "Recipe Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@Model.Recipe.Name</h1>
        <div>
            <a asp-page="Edit" asp-route-id="@Model.Recipe.Id" class="btn btn-warning">Edit</a>
            <a asp-page="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <p class="lead">@Model.Recipe.Description</p>
            
            <div class="row mb-3">
                <div class="col-md-4">
                    <strong>Prep Time:</strong> @Model.Recipe.PrepTimeMinutes minutes
                </div>
                <div class="col-md-4">
                    <strong>Cook Time:</strong> @Model.Recipe.CookTimeMinutes minutes
                </div>
                <div class="col-md-4">
                    <strong>Servings:</strong> @Model.Recipe.Servings
                </div>
            </div>

            <h3>Ingredients</h3>
            <ul>
                @foreach (var ingredient in Model.Recipe.Ingredients)
                {
                    <li>@ingredient.Quantity @ingredient.Unit @ingredient.Name</li>
                }
            </ul>

            <h3>Instructions</h3>
            <p style="white-space: pre-wrap;">@Model.Recipe.Instructions</p>
        </div>
    </div>
</div>
