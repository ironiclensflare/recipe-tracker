@page
@model RecipeTracker.Pages.Recipes.IndexModel
@{
    ViewData["Title"] = "Recipes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Recipe Tracker</h1>
        <a asp-page="Create" class="btn btn-primary">Add New Recipe</a>
    </div>

    @if (Model.Recipes.Count == 0)
    {
        <div class="alert alert-info">
            No recipes found. Click "Add New Recipe" to create your first recipe.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var recipe in Model.Recipes)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Name</h5>
                            <p class="card-text">@recipe.Description</p>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> Prep: @recipe.PrepTimeMinutes min | 
                                    Cook: @recipe.CookTimeMinutes min | 
                                    Servings: @recipe.Servings
                                </small>
                            </div>
                            <div class="mb-2">
                                <strong>Ingredients:</strong>
                                <ul class="small">
                                    @foreach (var ingredient in recipe.Ingredients.Take(3))
                                    {
                                        <li>@ingredient.Quantity @ingredient.Unit @ingredient.Name</li>
                                    }
                                    @if (recipe.Ingredients.Count > 3)
                                    {
                                        <li><em>...and @(recipe.Ingredients.Count - 3) more</em></li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-page="Details" asp-route-id="@recipe.Id" class="btn btn-sm btn-info">View</a>
                            <a asp-page="Edit" asp-route-id="@recipe.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-page="Delete" asp-route-id="@recipe.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
